<table class="table table-striped">
  <thead>
    <tr>
      <th>Chore</th>
      <th>Last Completed</th>
      <th>Next Victim</th>
    </tr>
  </thead>
  <tbody>
<% @chores.each do |chore| %>
  <tr>
    <td>
      <%= link_to chore.name, chore %>
      <span class="help-block"><%= chore.description %></span>
    </td>
    <td><span title="<%= chore.time_completed %>"><%=chore.time_completed > Time.now-5.years ? time_ago_in_words(chore.time_completed) : "Never" %></span></td>
    <td><%= chore.currentPerson.name %></td>
  </tr>
<% end %>
  </tbody>
</table>
